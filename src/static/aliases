alias ll='ls -Alh --author --block-size=K --time-style="+%Y/%m/%d %H:%M" --time=ctime --file-type --group-directories-first'

alias llinverted='ll -r'
alias llrecursive=ll -R

alias ll4csv='ll -m'

alias llctime='ll -t'
alias llctimeinverted='ll -tr'

alias llfilesize='ll -S'
alias llfilesizeinverted='ll -Sr'